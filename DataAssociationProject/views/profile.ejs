<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="flex items-end w-full justify-end">
        <a
          href="/logout"
          class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block"
          >Logout</a
        >
      </div>
      <div class="flex item-start gap-3">
        <div class="w-10 h-10 rounded-md overflow-hidden">
          <!-- <img
            class="w-full h-full object-cover"
            src="/images/uploads/ab.png"
            alt="Profile Picture"
          /> -->
          <img
            class="w-full h-full object-cover"
            src="<%= user.profilepic %>"
            alt="Profile Picture"
          />
        </div>

        <h3 class="text-3xl">
          <span class="font-light">Hello</span>, <%= user.name %>
        </h3>
      </div>

      <h5 class="mb-5 mt-3">You can create a new post</h5>
      <form action="/post" method="post">
        <textarea
          class="resize-none bg-transparent border-2 border-zinc-800 rounded-md w-1/3 p-3 outline-none"
          placeholder="What's on your mind"
          name="content"
        ></textarea>
        <input
          type="submit"
          class="px-3 py-2 bg-blue-500 block rounded-md mt-2 w-40 text-sm"
          value="Create new post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your posts</h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach(function(post) { %>
          <div
            class="post w-1/3 p-4 border-[1px] border-zinc-700 rounded-md bg-zinc-800 mb-4"
          >
            <h4 class="text-blue-500"><%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <small class="mt-4 inline-block"><%= post.likes.length %></small>
            <div class="btn flex gap-2 mt-1">
              <a class="text-blue-500" href="/like/<%= post._id %>">
                <%= post.likes.indexOf(user._id) ? 'Like' : 'Unlike' %>
              </a>
              <a href="/edit/<%= post._id %>" class="text-zinc-400">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
